- model_class = Meeting
%table.table.table-striped.tablesorter#meeting-table
  %thead
    %tr
      %th= model_class.human_attribute_name(:meeting_type_id)
      %th= model_class.human_attribute_name(:met)
      %th Num Students
      %th= model_class.human_attribute_name(:comment)
      %th= t '.actions', :default => t("helpers.actions")
  %tbody
    - @meetings.each do |meeting|
      %tr
        %td= link_to meeting.meeting_type.name, meeting_path(meeting)
        %td= meeting.met.in_time_zone('America/Los_Angeles').to_s(:long) if meeting.met
        %td= meeting.members.count - 1
        %td= meeting.comment
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_meeting_path(meeting), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), meeting_path(meeting), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'
= link_to t('.new', :default => t("helpers.links.new")), new_meeting_path, :class => 'btn btn-primary'

:javascript
  $(document).ready(function() {
    $("#meeting-table").tablesorter();
  });
