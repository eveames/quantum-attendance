= form_for @meeting, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :meeting_type_id, :class => 'control-label'
    .controls
      %select#meeting_type_id.form-control{:name => "meeting[meeting_type_id]"}
        - MeetingType.all.each do |type|
          - if @meeting.meeting_type_id == type.id
            %option{:value => "#{type.id}", :selected => ''}
              = type.name
          - else 
            %option{:value => "#{type.id}"}
              = type.name
  .control-group
    = f.label :instructor, :class => 'control-label'
    .controls
      %select#instructor.form-control{:name => "meeting[instructor]"}
        - Member.where(is_active: true, is_teacher: true).each do |inst|
          %option{:value => "#{inst.id}"}
            = inst.full_name
  .control-group
    = f.label :met, :class => 'control-label'
    .controls
      = f.datetime_local_field :met, {:type => "datetime-local", :data => {:format => "MM/dd/yyyy hh:mm PP"}}
  .control-group
    = f.label :comment, :class => 'control-label'
    .controls
      = f.text_field :comment, :class => 'text_field'
  .form-actions
    = f.submit nil, :id => 'submit-btn', :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), meetings_path, :class => 'btn'
