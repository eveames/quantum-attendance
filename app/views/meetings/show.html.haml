- model_class = Meeting
.page-header
  %h1= t '.title', :default => model_class.model_name.human.titleize
%dl.dl-horizontal
  %dt
    %strong
      Meeting Type:
  %dd= @meeting.meeting_type.name
  %dt
    %strong
      = model_class.human_attribute_name(:met)
      \:
  %dd= @meeting.met.to_s(:long)
  %dt
    %strong
      Students:
  %dd
    - @meeting.members.each do |member|
      = link_to member.full_name, member
      %br
  %dt
    %strong
      = model_class.human_attribute_name(:comment)
      \:
  %dd= (@meeting.comment && !@meeeting.comment.empty?) ? @meeting.comment : "None"
.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), meetings_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_meeting_path(@meeting), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), meeting_path(@meeting), :method => 'delete', :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
