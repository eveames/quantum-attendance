:javascript
  Keen.ready(function() {
    var client = new Keen({
      projectId: "#{ENV['KEEN_PROJECT_ID']}",
      readKey: "#{ENV['KEEN_READ_KEY']}"
    });

    var thisWeekQuery = new Keen.Query("count", {
      event_collection: "attendance",
      timeframe: "this_7_days",
      group_by: "meeting.school.name",
      interval: "daily"
    });

    var thisWeekChart = client.draw(thisWeekQuery, document.getElementById("grid-1-1"), {
      title: "Students per Day by School"
    });
  });
