- model_class = Belt
.page-header
  %h1= t '.title', :default => model_class.model_name.human.titleize
%dl.dl-horizontal
  %dt
    %strong
      = model_class.human_attribute_name(:name)
      \:
  %dd= @belt.name
  %dt
    %strong
      = model_class.human_attribute_name(:comment)
      \:
  %dd= @belt.comment
  %dt
    %strong
      = model_class.human_attribute_name(:is_active)
      \:
  %dd= @belt.is_active
  %dt
    %strong
      = model_class.human_attribute_name(:order_by)
      \:
  %dd= @belt.order_by
.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), belts_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_belt_path(@belt), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), belt_path(@belt), :method => 'delete', :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
