- model_class = MeetingType
.page-header
  %h1= t '.title', :default => model_class.model_name.human.titleize
%dl.dl-horizontal
  %dt
    %strong
      = model_class.human_attribute_name(:name)
      \:
  %dd= @meeting_type.name
  %dt
    %strong
      = model_class.human_attribute_name(:comment)
      \:
  %dd= @meeting_type.comment
  %dt
    %strong
      = model_class.human_attribute_name(:is_active)
      \:
  %dd= @meeting_type.is_active
.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), |
    meeting_types_path, :class => 'btn'                      |
  = link_to t('.edit', :default => t("helpers.links.edit")), |
    edit_meeting_type_path(@meeting_type), :class => 'btn'   |
  = link_to t('.destroy', :default => t("helpers.links.destroy")),                                               |
    meeting_type_path(@meeting_type),                                                                            |
    :method => 'delete',                                                                                         |
    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, |
    :class => 'btn btn-danger'                                                                                   |
