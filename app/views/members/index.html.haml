- model_class = Member
.page-header
  %h1= t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:first_name)
      %th= model_class.human_attribute_name(:last_name)
      %th= model_class.human_attribute_name(:belt_id)
      %th= model_class.human_attribute_name(:school_id)
      %th= model_class.human_attribute_name(:comment)
      %th= model_class.human_attribute_name(:is_active)
      %th= model_class.human_attribute_name(:is_teacher)
      %th= model_class.human_attribute_name(:is_kid)
      %th= t '.actions', :default => t("helpers.actions")
  %tbody
    - @members.each do |member|
      %tr
        %td= link_to member.first_name, member_path(member)
        %td= link_to member.last_name, member_path(member)
        %td= member.belt.name
        %td= member.school.name
        %td= member.comment
        %td= member.is_active
        %td= member.is_teacher
        %td= member.is_kid
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_member_path(member), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), member_path(member), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'
= link_to t('.new', :default => t("helpers.links.new")), new_member_path, :class => 'btn btn-primary'
